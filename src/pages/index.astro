---
import "../style/global.css";
const siteTitle = "Surfclubb Olas Artificiales-Surf";
const description =
  "SURFEAR OLAS ARTIFICIALES YA ES POSIBLE. UN GRAN NEGOCIO.";

import T3SVG from "../components/t3.astro";
import Youtubesvg from "../assets/platforms/youtube.svg.astro";
import Twittersvg from "../assets/platforms/twitter.svg.astro";

---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="description" content={description} />
    <meta name="twitter:image" content="images/logo.svg" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@surfclubb" />
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/images/logo.svg" />
    <title>{siteTitle}</title>
    <meta name="theme-color" content="#000000" />

    <script defer data-domain="surfclubb.com" src="/src/scrypts/scryptPortada.js"
    ></script>
  </head>
  <body class="h-screen bg-gradient-to-b from-[#300171] to-gray-900">
    <main>
      <div
        class="flex h-screen w-full items-center justify-center p-4 align-middle text-slate-200"
      >
        <div
          class="grid grid-cols-1 md:grid-cols-[1fr_auto] grid-rows-2 md:grid-rows-[1fr]"
        >
          <T3SVG />
          <div class="px-4 py-4 text-center md:py-0 md:text-left">
            <h1 class="text-2xl font-bold leading-none">SURFCLUBB</h1>
            <a href="/">
              <h3 class="text-xl">OLAS ARTIFICIALES</h3>
            </a>

            <h2 class="text-2xl font-bold">Productos</h2>  
              <a href="/modelos">
                <h3 class="text-xl">MODELOS</h3>
              </a>

            <h2 class="text-2xl font-bold">Preguntas y Respuestas</h2>
              <a href="/faq">
                <h3 class="text-xl">FAQ</h3>
              </a>

            <h2 class="text-2xl font-bold">Blog</h2>  
              <a href="/blog">
                <h3 class="text-xl">ARTICULOS</h3>
              </a>

            <h2 class="text-2xl font-bold">Informaci√≥n</h2>
              <a href="/links">
                <h3 class="text-xl">CONTACTO</h3>
              </a>

            <h2 class="text-2xl font-bold">Acerca de</h2>
              <a href="/empresa">
                <h3 class="text-xl">NOSOTROS</h3>
            </a>
          </div>
        </div>

        <div class="absolute bottom-0 flex h-16 gap-6 p-4 text-slate-200">
          <a
            href="https://www.youtube.com/c/surfclubbcom"
            class="flex gap-2 align-baseline"
          >
            <Youtubesvg />
            <span class="hidden md:block">YouTube</span>
          </a>

          <a
            href="https://twitter.com/surfclubbcom"
            class="flex gap-2 align-baseline"
          >
            <Twittersvg />
            <span class="hidden md:block">Twitter</span>
          </a>

        </div>
      </div>
    </main>
  </body>
</html>

<style>
  .title {
    font-family: "Inter", sans-serif;
  }
  a {
    @apply text-slate-200 hover:text-slate-100 hover:underline;
  }

  /* background */
  main {
    position: relative;
    overflow: hidden;
  }
  /* Create the animation */
  @keyframes breathing {
    0% {
      opacity: 0.3;
    }
    50% {
      opacity: 0.03;
    }
    100% {
      opacity: 0.3;
    }
  }

  main::before {
    content: "";
    position: absolute;
    width: 200%;
    height: 200%;
    top: -50%;
    left: -50%;
    z-index: -1;
    background-image: url("data:image/svg+xml,%3Csvg width='100%' height='100%' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23300171' fill-opacity='1' fill-rule='evenodd'%3E%3Cpath d='M0 40L40 0H20L0 20M40 40V20L20 40'/%3E%3C/g%3E%3C/svg%3E");

    transform: rotate(180deg);

    /* animate opacity */
    animation: breathing 15s ease-in-out infinite;
  }
</style>
